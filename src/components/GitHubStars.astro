---
import { getGithubStars } from '../utils/github';

interface Props {
  repoUrl: string;
}

const { repoUrl } = Astro.props;
const starsCount = await getGithubStars(repoUrl);
---

<div class="inline-flex items-center gap-1.5 px-2.5 py-1.5 bg-indigo-50 dark:bg-indigo-900/20 text-indigo-600 dark:text-indigo-300 rounded-lg text-xs font-medium ring-1 ring-indigo-500/10 dark:ring-indigo-400/20">
  <svg
    xmlns="http://www.w3.org/2000/svg"
    class="size-4"
    viewBox="0 0 24 24"
    fill="currentColor"
  >
    <path
      d="M11.48 3.499a.562.562 0 011.04 0l2.125 5.111a.563.563 0 00.475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 00-.182.557l1.285 5.385a.562.562 0 01-.84.61l-4.725-2.885a.563.563 0 00-.586 0L6.982 20.54a.562.562 0 01-.84-.61l1.285-5.386a.562.562 0 00-.182-.557l-4.204-3.602a.563.563 0 01.321-.988l5.518-.442a.563.563 0 00.475-.345L11.48 3.5z"
    />
  </svg>
  {starsCount}
</div>