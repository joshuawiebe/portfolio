---
import { siteConfig } from "../config";
import { useTranslations } from "../utils/translations";
import GitHubStars from "./GitHubStars.astro";

const t = useTranslations();
const hasProjects = siteConfig.projects && siteConfig.projects.length > 0;
---

{
  hasProjects && (
    <section id="projects" class="p-8 sm:p-12 md:p-16 lg:p-24">
      <div>
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
          <div class="lg:col-span-4">
             <h2 
               data-i18n="projects.title"
               class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-foreground">
               {t.projects.title}
             </h2>
            <div
              class="w-[75px] h-[5px] mt-2 rounded-full"
              style={`background-color: ${siteConfig.accentColor}`}
            />
          </div>

          <div class="lg:col-span-8">
            <div class="space-y-8">
              {siteConfig.projects.map((project, index) => {
                return (
                  <div class="group relative">
                    <div
                      class="block relative p-4 sm:p-6 md:p-8 bg-gray-50/80 dark:bg-gray-800/50 rounded-xl sm:rounded-2xl border border-gray-200/50 dark:border-gray-700/50 shadow-lg shadow-blue-500/5 dark:shadow-blue-400/5 backdrop-blur-sm transition-all duration-300 hover:bg-gray-100/80 dark:hover:bg-gray-800/80 hover:shadow-xl hover:shadow-blue-500/10 dark:hover:shadow-blue-400/10 hover:-translate-y-1"
                    >
                      {project.link && (
                        <a
                          href={project.link}
                          target="_blank"
                          rel="noopener noreferrer"
                          class="absolute top-4 right-4 sm:top-6 sm:right-6 md:top-8 md:right-8 w-10 h-10 sm:w-11 sm:h-11 md:w-12 md:h-12 flex items-center justify-center bg-blue-500/10 dark:bg-blue-400/10 text-blue-700 dark:text-blue-300 rounded-full shadow-sm shadow-blue-500/5 dark:shadow-blue-400/5 transition-all duration-300 opacity-90 group-hover:opacity-100 hover:bg-blue-500/20 dark:hover:bg-blue-400/20"
                        >
                          <svg
                            class="w-4 h-4 sm:w-4.5 sm:h-4.5 md:w-5 md:h-5 transition-transform duration-300 group-hover:translate-x-0.5 group-hover:-translate-y-0.5"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                          >
                            <path
                              stroke-linecap="round"
                              stroke-linejoin="round"
                              stroke-width="2"
                              d="M7 17L17 7M17 7H7M17 7V17"
                            />
                          </svg>
                        </a>
                      )}

                      <div class="space-y-4">
                        <div>
                          <div>
                            <span
                              class="text-sm font-mono"
                              style={{ color: siteConfig.accentColor }}
                            >
                              0{index + 1}
                            </span>
                          </div>
                          <h3 class="text-xl sm:text-2xl font-bold text-gray-900 dark:text-gray-100 mt-1">
                            {project.name}
                          </h3>
                        </div>

                        <p
                          data-project-desc={project.name.toLowerCase().replace(/\s+/g, '')}
                          class={`text-base sm:text-lg text-gray-600 dark:text-gray-400 leading-relaxed ${project.link ? "pr-12 sm:pr-14 md:pr-16" : ""}`}
                        >
                          {project.description}
                        </p>

                        {project.skills && project.skills.length > 0 && (
                          <div class="flex flex-wrap gap-1.5 sm:gap-2 pt-2">
                            {project.skills.map((skill) => (
                              <span
                                class="px-2.5 sm:px-3 py-1 sm:py-1.5 bg-indigo-50 dark:bg-indigo-900/20 text-indigo-600 dark:text-indigo-300 rounded-md sm:rounded-lg text-xs sm:text-sm font-medium ring-1 ring-indigo-500/10 dark:ring-indigo-400/20"
                              >
                                {skill}
                              </span>
                            ))}
                          </div>
                        )}
                        {project.link?.includes('github.com') && (
                          <div class="absolute bottom-4 sm:bottom-6 md:bottom-8 right-4 sm:right-6 md:right-8">
                            <GitHubStars repoUrl={project.link} />
                          </div>
                        )}
                      </div>
                    </Component>
                  </div>
                );
              })}
            </div>
          </div>
        </div>
      </div>
    </section>
  )
}

<script>
  import '../utils/clientTranslations';
</script>
